@model BerrasBio.Pages.ShowAllMovies.CurrentMoviesModel

@{
    ViewData["Title"] = "Current Movies";
}

<h1>Current Movies</h1>
<table class="table">
        
  

        <thead>

        <tr>
            
         
            <th>
                       <a asp-page="./Index" asp-route-sortOrder="@Model.TicketsLeftSort">
                    @Html.DisplayNameFor(model=>model.Ticket[0].Amount)

                </a>
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Movie)
            </th>
            <th>
                @Html.DisplayNameFor(m=>m.Ticket[0].Movie.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m=>m.Ticket[0].Movie.Minutes)
            </th>
              <th>
                   <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                @Html.DisplayNameFor(model=>model.Ticket[0].Movie.Date)    
                
                </a>
            </th>
            <th>
           @Html.DisplayNameFor(m=>m.Theater[0].Room)

            </th>
       
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tickets) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Price)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.Movie.Minutes)
            </td>
                 <td>
                @Html.DisplayFor(modelItem => item.Movie.Date)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.MovieTheater.Room)
            </td>
                         <td>

                        @if (item.Amount > 0)
                        {
                        <a asp-page="/Cart" asp-page-handler="BuyTickets" asp-route-id="@item.MovieID">Order tickets</a>
                    }
                    else
                    {      <div class="NoTickets">

                        <p><strong>SLUTSÅLT</strong></p>
                             </div>

                    }

                </td>
            
        </tr>
}
    </tbody>
</table>
 
